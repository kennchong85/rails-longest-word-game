

<h1>Countdown!</h1>
<div class="container d-sm-inline-flex">
  <% @letters.each do |letter| %>
    <div class="letter"> <%= letter %> </div>
    <% end %>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="answer">Your Word</label>
    <input name="letters" type="hidden" value=<%= @letters.join %>>
    <input type="text" name="answer" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
